.container
  -# frozen_string_literal: true
  = simple_form_for(@post) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  
    .form-inputs
      = f.input :title
      
      .row
      = f.label :description
      = f.rich_text_area :description
    %p
    .form-actions
      = f.button :submit
