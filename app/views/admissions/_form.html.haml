.container
  = simple_form_for(@admission) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  
    .form-inputs
      = f.input :rating, collection: 1..5
      = f.input :review
  
    .form-actions
      = f.button :submit
