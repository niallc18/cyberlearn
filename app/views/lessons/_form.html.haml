// form for lessons
// Reference: https://github.com/corsego
// Reference: https://github.com/heartcombo/simple_form (Gem)
// rich text defined in lesson.rb
= simple_form_for([@course, @lesson]) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :info
    = f.rich_text_area :info
    %small= f.error :info, class: 'text-danger'
    /= f.association :course
    /= f.input :course_id, input_html: {value: @lesson.course_id || params[:course_id]}, as: :hidden
  %p
  .form-actions
    = f.button :submit
