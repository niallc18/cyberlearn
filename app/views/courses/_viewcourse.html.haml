.card.text-info.bg-dark.mb-3{style: "max-width: 1250px;"}
  .row.no-gutters
  .card-header
    .fa.fa-book
    = link_to course.title, course_path(course)
  .card-body
    = course.description
  .card-footer
    .fa.fa-book
    = course.lessons.count
  .card-footer
    Course Fee:
    = course.details
    %br
    Level of Difficulty:
    = course.stage
    %br
    .far.fa-clock
    = course.created_at.strftime('%d-%b-%Y')
  .col-md-6
    .text-right
      .fa.fa-chalkboard-teacher
      = link_to course.user.username, user_path(course.user)
  - if current_user
    - if policy(course).edit?
      .card-footer
        = link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning'
        = link_to 'Destroy', course, method: :delete, data: { confirm: 'Confirm?' }, class: 'btn btn-sm btn-danger'
    %p
